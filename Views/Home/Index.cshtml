                <nav class="my-2 my-md-0 mr-md-1">
                    <a class="p-3 text-dark" href="#">Features</a>
                    <a class="p-0 text-dark" href="#">Enterprise</a>
                    <a class="p-3 text-dark" href="#">Support</a>
                    <a class="p-0 text-dark" href="#">Pricing</a>
                </nav>
        @if (!User.Identity.IsAuthenticated)
            {
            <a class="btn btn-outline-primary align-items-center" style="position: absolute; right: 10px;top: 8px;" href="~/Identity/Account/Login">Sign in</a>
        }
        else
        {
            <a class="btn btn-outline-primary align-items-center" style="position: absolute; right: 10px;top: 8px;" href="~/Identity/Account/Logout">Sign out</a>
        }
        <a href="#"><i class="fa-solid fa-box-archive fa-2xl text-black" style="position: absolute; right:120px;top: 27px;"></i></a>
            </div>
