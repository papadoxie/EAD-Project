    <div class="parent_div">
        <div class="bg-image"></div>
            <div class="container ">
                <div class="card-deck mb-1 text-center">
                    <div class="row">
                        <div class="col-sm-4">
                        <div class="card mb-4 bg-secondary  box-shadow">
                                <div class="card-header">
                                    <h4 class="my-0 font-weight-normal">Free</h4>
                                </div>
                                <div class="card-body">
                                    <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1>
                                    <ul class="list-unstyled mt-3 mb-4">
                                        <li>10 users included</li>
                                        <li>2 GB of storage</li>
                                        <li>Email support</li>
                                        <li>Help center access</li>
                                    </ul>
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a href="~/Identity/Account/Register"><button type="button" class="btn btn-lg btn-block btn-primary">Sign up for free</button></a>
                                }
                                else
                                {
                                    <a href="#"><button type="button" class="btn btn-lg btn-block btn-primary">Get Started</button></a>
                                }
                            </div>
                            </div>
                        </div>
